@{
    ViewBag.Title = "Chris' Portfolio";
    ViewBag.Description = "This is a sample of applications I have written, with a bias toward the more graphical.  For a more complete portfolio, please visit my GitHub.";
}

<div class="portfolioBackground">
    <div class="content">
        <div class="portfolio-grid">
            <div class="marquis" style="grid-row:1/3; grid-column:1/1;">
                <h1 class="marquis-text">Christopher Carter, <span style="font-size:80%">MD</span></h1>
                <div class="marquis-pic">
                    <img src="~/Content/Images/CSCIcon.jpg" />
                </div>
                <h2 class="marquis-text">.NET Software Engineer<br />Portland, OR</h2>
                <br />
                <div class="certifications">
                    <img src="~/Content/Images/Special_ProgHTML5_Blk.png" />
                    <img src="~/Content/Images/MS_Cert_Professional_logo_Blk_rgb.png" />
                </div>
            </div>


            <div class="portfolio-item" style="grid-row:1/1; grid-column:2/2;">
                <a class="btn textlink" href="http://surfaceplot.cscarter.net">
                    <span class="textlink-main">SurfacePlot</span>
                    <br />
                    <img class="portfolio-thumb" src="~/Content/Images/surfaceplot.png" />
                </a>
            </div>


            <div class="portfolio-item" style="grid-row:1/1; grid-column:3/3;">
                <a class="btn textlink" href="http://store.cscarter.net">
                    <span class="textlink-main">Store</span>
                    <br />
                    <img class="portfolio-thumb" src="~/Content/Images/MyStore.JPG" />
                </a>
            </div>
            
        
        <div class="portfolio-item" style="grid-row:2/2; grid-column:2/2;">
                <a class="btn textlink" href="http://trees.cscarter.net">
                    <span class="textlink-main">FractalTree</span>
                    <br />
                    <img class="portfolio-thumb" src="~/Content/Images/randomizedTree.png" />
                </a>
            </div>


        </div> <!--grid-->
    </div> <!--content-->
</div> <!--background-->

<script>
    var elems = document.querySelectorAll(".navlink");
    [].forEach.call(elems, function (el) {
        el.classList.add("inactive");
    });

    document.getElementById('portfoliolink').classList.remove('inactive');
</script>